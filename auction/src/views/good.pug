extends layout

block content
  .time-line
    form#good-form(action="/good" method='post' enctype='multipart/form-data')
      .input-group
        label(for="good-name") 상품명
        input#good-name(type="text" name='name' required autofocus)
      .input-group
        label(for="good-img") 이미지
        input#good-img(type="file" name='img' required)
      .input-group
        label(for="good-price") 시작가격
        input#good-price(type="number" name='price' required)
      button#join-btn.btn(type='submit') 상품 등록